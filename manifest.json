{
  "manifest_version": 3,
  "name": "Exploratory Testing",
  "version": "3.0.1",
  "description": "Chrome extension for exploratory testing",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "downloads",
    "scripting",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/iconsmall.png",
      "48": "/icons/iconmed.png",
      "128": "/icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "/icons/iconsmall.png",
    "48": "/icons/iconmed.png",
    "128": "/icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"],
      "run_at": "document_idle"
    }
  ]
}